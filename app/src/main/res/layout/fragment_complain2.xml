<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@android:style/Widget.DeviceDefault.Light.ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:scrollbarStyle="insideOverlay">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complain"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:textSize="17dp"
                    android:textColor="@color/brown"
                    tools:ignore="MissingConstraints" />
                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layoutMode="clipBounds"
                    android:backgroundTintMode="multiply"
                    android:spinnerMode="dialog"
                    android:layout_marginLeft="22dp"
                    android:backgroundTint="@color/brown"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            app:cardCornerRadius="15dp"
            android:layout_marginRight="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Details"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:textSize="17dp"
                    android:textColor="@color/brown"
                    tools:ignore="MissingConstraints" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="10dp"
                    android:textSize="12dp" />
                <EditText
                    android:id="@+id/user"
                    android:layout_width="302dp"
                    android:layout_height="49dp"
                    android:ems="10"
                    android:hint="User Name"
                    android:inputType="textPersonName"
                    app:layout_constraintBottom_toTopOf="@+id/complain"
                   android:layout_marginLeft="24dp" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="10dp"
                        android:textSize="12dp" />
                    <EditText
                        android:id="@+id/tp"
                        android:layout_width="302dp"
                        android:layout_height="49dp"
                        android:ems="10"
                        android:hint="Mobile Number"
                        android:inputType="text|phone"
                        app:layout_constraintBottom_toTopOf="@+id/complain"
                        android:layout_marginLeft="24dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-mail"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="10dp"
                        android:textSize="12dp" />
                    <EditText
                        android:id="@+id/email"
                        android:layout_width="302dp"
                        android:layout_height="49dp"
                        android:ems="10"
                        android:hint="E-mail"
                        android:inputType="textEmailAddress"
                        app:layout_constraintBottom_toTopOf="@+id/complain"
                        android:layout_marginLeft="24dp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CFCCCB"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attachments"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:textSize="17dp"
                    android:textColor="@color/brown"
                    tools:ignore="MissingConstraints" />

                <MultiAutoCompleteTextView
                    android:id="@+id/complain"
                    android:layout_width="302dp"
                    android:layout_height="49dp"
                    android:hint="Anything more to tell ?"
                  android:layout_marginLeft="22dp" />
                <Button
                    android:id="@+id/addCom"
                    android:layout_width="197dp"
                    android:layout_height="49dp"
                    android:textColor="#fff"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/button"
                    android:text=" Lodge Complain"
                  android:layout_marginBottom="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CFCCCB"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        app:cardCornerRadius="15dp"
        android:layout_marginRight="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#EFEDED"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notice"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:textColor="@color/brown"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notice1"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notice2"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="5dp" />

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
</FrameLayout>