<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@android:style/Widget.DeviceDefault.Light.ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="insideOverlay"
    tools:context=".Activities.AdminUi.AdInterruption">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/brown">
            <Button
                android:id="@+id/backprof"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="22dp"
                android:layout_height="35dp"
                android:layout_weight="3"
                android:background="@drawable/ic_dehaze_black_24dp"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/inter"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_weight=".5"
                android:ems="10"
                android:text="Edit Profile"
                android:textColor="#fff"
                android:textSize="17dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="22dp"
                android:textColor="#000"
                android:text="Change Password"/>
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp"
            android:layout_marginRight="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:textSize="12dp" />
            <EditText
                android:id="@+id/uname"
                android:layout_width="302dp"
                android:layout_height="49dp"
                android:ems="10"
                android:hint="User Name"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/complain"
                android:layout_marginLeft="24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:textSize="12dp" />
            <EditText
                android:id="@+id/email"
                android:layout_width="302dp"
                android:layout_height="49dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/complain"
                android:layout_marginLeft="24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telephone Number"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:textSize="12dp" />
            <EditText
                android:id="@+id/tpnum"
                android:layout_width="302dp"
                android:layout_height="49dp"
                android:ems="10"
                android:hint="Telephone Number"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/complain"
                android:layout_marginLeft="24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIC Number"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:textSize="12dp" />
            <EditText
                android:id="@+id/nic"
                android:layout_width="302dp"
                android:layout_height="49dp"
                android:ems="10"
                android:hint="NIC Number"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/complain"
                android:layout_marginLeft="24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/resetb"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:textColor="#fff"
                android:layout_weight=".5"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button"
                android:text="Reset"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/submitb"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:textColor="#fff"
                android:layout_weight=".5"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button"
                android:text="submit"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="390dp">
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/c"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
</LinearLayout>
</ScrollView>